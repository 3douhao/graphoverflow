{
  questions(func: eq(Type, "Question"), orderdesc: ViewCount, first: 1) {
  	Title {
      Text
      Author { DisplayName }
    }
  	Score
  	ViewCount
    count(Comment)
    Comment (orderdesc: Timestamp, first: 10) {
      Text, Timestamp
      Author {DisplayName}
    }
    count(Vote)
    Vote (orderdesc: Timestamp, first: 1) {
      Score
      Timestamp
      Author {DisplayName}
    }
  }
}

